                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/BikePowerLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Power: "
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/BikePowerState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N/A"
                    android:textSize="22sp" />

            </LinearLayout>


            <Space
