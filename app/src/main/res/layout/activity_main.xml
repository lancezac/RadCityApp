                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/HeadlightPowerLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Headlight: "
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/HeadlightState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N/A"
                    android:textSize="22sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:textSize="22sp"
                    android:layout_height="wrap_content"
                    android:text="Range: "
                    />

                <TextView
                    android:id="@+id/RangeEstimate"
                    android:layout_width="wrap_content"
                    android:textSize="22sp"
                    android:layout_height="wrap_content"
                    android:text="N/A"
                    />
            </LinearLayout>


            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/PASLabel"
                    android:layout_width="wrap_content"
                    android:textSize="22sp"
                    android:layout_height="wrap_content"
                    android:text="PAS Level: "
                    />

                <TextView
                    android:id="@+id/PASLevel"
                    android:layout_width="wrap_content"
                    android:textSize="22sp"
                    android:layout_height="wrap_content"
                    android:text="N/A"
                    />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/BatteryChargeLabel"
                    android:layout_width="wrap_content"
                    android:textSize="22sp"
                    android:layout_height="wrap_content"
                    android:text="Charge: "
                    />
                <TextView
                    android:id="@+id/BatteryChargePercent"
                    android:layout_width="wrap_content"
                    android:textSize="22sp"
                    android:layout_height="wrap_content"
                    android:text="N/A"
                    />
            </LinearLayout>


            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/BatteryVoltageLabel"
                    android:layout_width="wrap_content"
                    android:textSize="22sp"
                    android:layout_height="wrap_content"
                    android:text="Volts: "
                    />
                <TextView
                    android:id="@+id/BatteryVoltage"
                    android:layout_width="wrap_content"
                    android:textSize="22sp"
                    android:layout_height="wrap_content"
                    android:text="N/A"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"

            android:orientation="horizontal">

            <LinearLayout
